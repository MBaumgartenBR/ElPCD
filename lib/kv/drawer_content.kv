#:kivy 1.11.1
#:import delete_dialog lib.delete_dialog.delete_dialog
<DrawerContent@MDNavigationDrawer>:
    orientation: 'vertical'
    MDBoxLayout:
        size_hint_y: None
        height: dp(200)
        pos_hint: {'top': 1}
        Image:
            source: './assets/gedalogo.png'
    ScrollView:
        size_hint_y: 1
        do_scroll_y: True
        do_scroll_x: False
        MDGridLayout:
            id: screens
            cols: 1
            adaptive_height: True
            md_bg_color: app.theme_cls.primary_dark
            MDBoxLayout:
                orientation: 'vertical'
                adaptive_height: True
                OneLineAvatarIconListItem:
                    text: 'Visualizar PCD'
                    font_style: 'Button'
                    theme_text_color: 'Custom'
                    text_color: app.theme_cls.bg_light
                    on_release:
                        app.main_frame.switch_to_screen('pcd')
                        root.set_state()
                    IconLeftWidget:
                        icon:'file-tree'
                        theme_text_color: 'Custom'
                        text_color: app.theme_cls.bg_light
                        on_release:
                            app.main_frame.switch_to_screen('pcd')
                            root.set_state()
                    IconRightWidget:
                        icon: 'chevron-right'
                        theme_text_color: 'Custom'
                        text_color: app.theme_cls.bg_light
                        on_release:
                            app.main_frame.switch_to_screen('pcd')
                            root.set_state()
                MDSeparator:
                    height: dp(1)
                    color: app.theme_cls.bg_light
                OneLineAvatarIconListItem:
                    text: 'Visualizar TTD'
                    font_style: 'Button'
                    theme_text_color: 'Custom'
                    text_color: app.theme_cls.bg_light
                    on_release:
                        app.main_frame.switch_to_screen('viewttd')
                        root.set_state()
                    IconLeftWidget:
                        icon:'calendar-clock'
                        theme_text_color: 'Custom'
                        text_color: app.theme_cls.bg_light
                        on_release:
                            app.main_frame.switch_to_screen('viewttd')
                            root.set_state()
                    IconRightWidget:
                        icon: 'chevron-right'
                        theme_text_color: 'Custom'
                        text_color: app.theme_cls.bg_light
                        on_release:
                            app.main_frame.switch_to_screen('viewttd')
                            root.set_state()
                MDSeparator:
                    height: dp(1)
                    color: app.theme_cls.bg_light
                OneLineAvatarIconListItem:
                    text: 'Importar Dados'
                    font_style: 'Button'
                    theme_text_color: 'Custom'
                    text_color: app.theme_cls.bg_light
                    on_release: toast('Importação ainda não implementada')
                    IconLeftWidget:
                        icon:'file-import-outline'
                        theme_text_color: 'Custom'
                        text_color: app.theme_cls.bg_light
                        on_release: toast('Importação ainda não implementada')
                    IconRightWidget:
                        icon: 'chevron-right'
                        theme_text_color: 'Custom'
                        text_color: app.theme_cls.bg_light
                        on_release: toast('Importação ainda não implementada')
                MDSeparator:
                    height: dp(1)
                    color: app.theme_cls.bg_light
                OneLineAvatarIconListItem:
                    text: 'Exportar Dados'
                    font_style: 'Button'
                    theme_text_color: 'Custom'
                    text_color: app.theme_cls.bg_light
                    on_release:
                        app.main_frame.switch_to_screen('export')
                        root.set_state()
                    IconLeftWidget:
                        icon:'file-export-outline'
                        theme_text_color: 'Custom'
                        text_color: app.theme_cls.bg_light
                        on_release:
                            app.main_frame.switch_to_screen('export')
                            root.set_state()
                    IconRightWidget:
                        disabled: True
                        icon: 'chevron-right'
                        theme_text_color: 'Custom'
                        text_color: app.theme_cls.bg_light
                        on_release:
                            app.main_frame.switch_to_screen('export')
                            root.set_state()
    MDBoxLayout:
        size_hint_y: None
        height: dp(50)
        md_bg_color: app.theme_cls.bg_darkest
        MDIconButton:
            icon: 'delete'
            theme_text_color: 'Custom'
            text_color: (1,0,0,1)
            on_release:
                delete_dialog()
                root.set_state()
        MDLabel:
            size_hint_x: 1
        MDIconButton:
            icon: 'facebook'
            theme_text_color: 'Custom'
            text_color: app.theme_cls.primary_dark
            on_release: open_social_media('facebook')
        MDIconButton:
            icon: 'blogger'
            theme_text_color: 'Custom'
            text_color: (1, 87/255, 34/255, 1)
            on_release: open_social_media('blogger')