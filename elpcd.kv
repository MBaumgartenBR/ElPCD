#:kivy 1.11.1
#:import toast kivymd.toast.toast
#:import view_ttd lib.py.view_ttd.view_ttd
#:import open_social_media lib.utils.open_social_media
#:import delete_dialog lib.dialogs.delete_dialog
<Logo@ButtonBehavior+Image+Widget>:
    source: app.LOGO
    pos_hint: {'center_x': .5, 'center_y': .5}

<MainFrame>:
    orientation: 'vertical'
    Manager:
        id: screen_manager
        MDScreen:
            name: "welcome"
            md_bg_color: app.theme_cls.primary_color
            MDBoxLayout:
                size_hint: (.6, .8)
                orientation: 'vertical'
                pos_hint: {'center_x': .5, 'center_y': .5}
                canvas:
                    Color:
                        rgba: (1, 1, 1, 1)
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [40,]
                Logo:
                    on_press:
                        root.switch_to_screen('pcd', duration = .5)
                        app.welcome_event.cancel()
        MDScreen:
            name: "pcd"
            MDBoxLayout:
                orientation: 'vertical'
                md_bg_color: app.theme_cls.bg_light
                CustomToolbar:
                    id: custom_toolbar
                MDBoxLayout:
                    orientation: 'horizontal'
                    MDBoxLayout:
                        id: tree_frame
                        orientation: 'vertical'
                        size_hint_x: .3
                        padding: [dp(10),dp(10),dp(5),dp(10)]
                        spacing: dp(10)

                    MDBoxLayout:
                        orientation: 'vertical'
                        padding: [dp(5),dp(10),dp(10),dp(10)]
                        size_hint_x: .7
                        spacing: dp(10)
                        MDBoxLayout:
                            id: data_frame
                            orientation: 'vertical'
                            Logo:
        MDScreen:
            name: "viewttd"
            on_pre_enter: view_ttd()
            md_bg_color: app.theme_cls.primary_color